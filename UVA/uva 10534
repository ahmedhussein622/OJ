#include <iostream>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

using namespace std;


int input[10010],MI[10010],MD[10010],dpI[10010],dpD[10010];
int mm,n,LI,LD;



void LIS() {

		LI = 0;
		for(int i = 0; i < n; i++) {

			int lo = 1;
			int hi = LI;
			while(lo <= hi) {
				int mid = (lo+hi)/2;
				if(input[MI[mid]] < input[i])
					lo = mid+1;
				else
					hi = mid-1;
			}

			dpI[i] = lo;

			int newL = lo;
			if(newL > LI) {
				LI = newL;
				MI[LI] = i;
			}
			else if(input[MI[newL]] > input[i]) {
					MI[newL] = i;
			}

		}

	}// end of LIS



 void LDS() {

		LD = 0;
		for(int i = n-1; i >= 0; i--) {

			int lo = 1;
			int hi = LD;
			while(lo <= hi) {
				int mid = (lo+hi)/2;
				if(input[MI[mid]] < input[i])
					lo = mid+1;
				else
					hi = mid-1;
			}

			dpD[i] = lo;
			int newL = lo;
			if(newL > LD) {
				LD = newL;
				MI[LD] = i;
			}
			else if(input[MI[newL]] > input[i]) {
				MI[newL] = i;
			}


		}

	}// end of LDS




int main()
{



		while(scanf("%d",&n) != EOF) {

			for(int i = 0; i < n; i++)
				scanf("%d",input+i);

			LIS();
			LDS();

			int maximum = 1;
			for(int i = 0; i < n; i++) {
				maximum  = max(maximum , min(dpI[i], dpD[i]));
			}


			maximum  = (maximum -1)*2 + 1;

			printf("%d\n",maximum );


		}

}




























